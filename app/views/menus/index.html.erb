<h1>Listing menus</h1>

<table>
  <thead>
    <tr>
      <th>product</th>
      <th>location</th>
      <th>kind</th>
      <th>description</th>
      <th>image</th>
      <th>gram</th>
      <th>eight</th>
      <th>quart</th>
      <th>half</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @menus.each do |menu| %>    
    <tr>
      <td><%= menu.product %></td>
      <td><%= menu.location %></td>
      <td><%= menu.kind %></td>
      <td><%= menu.description %></td>
      <td><%= image_tag menu.image %></td>
      <td><%= menu.gram %></td>
      <td><%= menu.eigth %></td>
      <td><%= menu.quart %></td>
      <td><%= menu.half %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Menu', new_menu_path %>
